<h1><%= @cocktail.name %></h1>


<%= simple_form_for [ @cocktail, @dose ] do |f| %>
  <%= f.input :description %>

  <%= f.association :ingredient %>
  <%= f.submit "submit", class: "btn btn-primary" %>

<% end %>

<h2>Recipe</h2>

<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
  <li class="list-group-item">
    <%= dose.ingredient.name %>
  </li>
    <% end %>
</ul>

